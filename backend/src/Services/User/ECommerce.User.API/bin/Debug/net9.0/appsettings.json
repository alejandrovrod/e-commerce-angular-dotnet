{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-very-secure-secret-key-that-is-at-least-32-characters-long-for-testing",
    "Issuer": "ECommerce.UserService",
    "Audience": "ECommerce.Client",
    "ExpirationInMinutes": 60
  },
  "ConnectionStrings": {
    "UsersDb": "Data Source=localhost;Initial Catalog=ECommerceUsersDb;Integrated Security=true;TrustServerCertificate=true",
    "EventBus": "amqp://admin:password123@localhost:5672",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/user-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
