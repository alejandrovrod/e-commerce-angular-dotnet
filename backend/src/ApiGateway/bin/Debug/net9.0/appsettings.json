        ],
        "Headers": {
          "X-API-Key": "ecommerce-service-secret-key"
        }
      },
      "user-addresses-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/addresses/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/addresses/{**catch-all}" }
        ],
        "Headers": {
          "X-API-Key": "ecommerce-service-secret-key"
        }
      },
      "user-admin-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/admin/{**catch-all}" }
        ],
        "Headers": {
